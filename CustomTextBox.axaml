<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="140" d:DesignHeight="80"
             x:Class="AvaloniaDefaultDemoForm.CustomTextBox">
    <StackPanel>
        <TextBox x:Name="InnerTextBox"
            Classes="special" Text="Text" NewLine="">
            <TextBox.InnerLeftContent>
                <Image Source="img/icons8_add_text_48px.png" Height="12" Width="12" Margin="12,0,0,0"></Image>
            </TextBox.InnerLeftContent>
            <TextBox.InnerRightContent>
                <Image Source="img/icons8_add_text_48px.png" Height="12" Width="12" Margin="12,0,14,0"></Image>
            </TextBox.InnerRightContent>
        </TextBox>
        <TextBlock x:Name="InnerTextBlock"
                   Height="15"
                   MinHeight="15"
                   FontSize="12"
                   Text="Supporting Text"
                   Margin="10,-4,0,0">
        </TextBlock>
    </StackPanel>
</UserControl>